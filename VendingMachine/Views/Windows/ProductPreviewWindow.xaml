<Window
    x:Class="VendingMachine.Views.Windows.ProductPreviewWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VendingMachine.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Ваш товар"
    Width="400"
    Height="250"
    Icon="pack://application:,,,/Resources/Images/vending-icon.png"
    Style="{StaticResource WindowStyle}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Image Grid.Row="0"
               x:Name="productIcon"
               Margin="8"
               HorizontalAlignment="Center"
               VerticalAlignment="Center" />

        <TextBlock Grid.Row="1"
                   Style="{StaticResource InformationTextBlockStyle}"
                   x:Name="productName"/>
    </Grid>
</Window>
