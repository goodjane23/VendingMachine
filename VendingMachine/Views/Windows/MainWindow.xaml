<Window
    x:Class="VendingMachine.Views.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:VendingMachine.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VendingMachine.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Style="{StaticResource MainWindowStyle}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid IsSharedSizeScope="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Style="{StaticResource RowMarginStyle}" />
            <RowDefinition Height="Auto" />
            <RowDefinition Style="{StaticResource RowMarginStyle}" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label
            Grid.Row="1"
            Content="Take ' Go"
            Style="{StaticResource MainHeaderLblStyle}" />

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <controls:Showcase
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />

            <Grid Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Style="{StaticResource RowMarginStyle}" />
                    <RowDefinition Height="*" />
                    <RowDefinition Style="{StaticResource RowMarginStyle}" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Button Grid.Row="1" Content="Instruction" />

                <controls:NumberPanel
                    x:Name="panel"
                    Grid.Row="5"
                    CancelClickCommand="{Binding CancelCommand}"
                    OkClickCommand="{Binding OkCommand}"
                    ScreenText="{Binding DisplayText, Mode=TwoWay}" />
            </Grid>
        </Grid>

        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="3"
                Margin="8"
                Text="{Binding DisplayText, Mode=OneWay}" />

            <Label
                x:Name="productLbl"
                Grid.Column="1"
                Content="Push"
                Style="{StaticResource ProductcaseStyle}" />
        </Grid>
    </Grid>
</Window>
