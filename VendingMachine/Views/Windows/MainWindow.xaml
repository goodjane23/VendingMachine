<Window x:Class="VendingMachine.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VendingMachine.Views.Windows"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource MainWindowStyle}">
    <Grid 
        IsSharedSizeScope="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Style="{StaticResource RowMarginStyle}"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Style="{StaticResource RowMarginStyle}"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label
            Grid.Row="1"
            Content="Take ' Go"
            Style="{StaticResource MainHeaderLblStyle}"/>

        <Grid
            Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ContentControl
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Grid.Column="1"
                Template="{StaticResource ShowcaseTemplate}"/>
            <Grid
                Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Style="{StaticResource RowMarginStyle}"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Style="{StaticResource RowMarginStyle}"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button
                    Grid.Row="1"
                    Content="Instruction"/>
                <Label
                    x:Name="SrceenLbl"
                    Grid.Row="3"
                    Content="{Binding Screen}"
                    Style="{StaticResource ScreenLblStyle}"/>
                <ContentControl
                    Grid.Row="5"
                    Template="{StaticResource PanelTemplate}"/>
            </Grid>

        </Grid>

        <Grid
            Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label
                x:Name="ProductLbl"
                Grid.Column="1"
                Style="{StaticResource ProductcaseStyle}"
                Content="Push"/>
        </Grid>
    </Grid>
</Window>
